generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id
  name         String?
  email        String   @unique
  createdAt    DateTime @default(now())
  attempts     Json?
  password     String?
  accessToken  String?
  refreshToken String?

  quizes   Quiz[]
  Attempts Attempts[]
}

model Quiz {
  id           String  @id @default(cuid())
  title        String
  description  String?
  numQuestions Int
  timeLimit    Int
  passingScore Int
  difficulty   String
  subject      String

  User   User   @relation(fields: [userId], references: [id])
  userId String
}

model Attempts {
  id        String @id @default(cuid())
  attemptId String @unique
  map       Json

  user    User      @relation(fields: [userId], references: [id]) // ðŸ”¥ FK to User
  userId  String
  Results Results[]
}

model Results {
  id        String   @id @default(cuid())
  result    Int
  attemptId String
  attemt    Attempts @relation(fields: [attemptId], references: [id])
}

model Blacklist {
  id        String   @id @default(cuid())
  token     String
  createdAt DateTime @default(now())
}
